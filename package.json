{
  "name": "ralphi-monorepo",
  "version": "3.0.0",
  "description": "Rate limiting api server",
  "author": "Yoni Jah <yonjah.npm@non.co.il>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/yonjah/ralphi/issues"
  },
  "homepage": "https://ralphi.js.org",
  "scripts": {
    "lint": "eslint --ext js --ext md .",
    "test": "mocha 'test/**/*.test.js'",
    "cover": "nyc --reporter=lcov --reporter=text mocha 'test/unit/**/*.test.js'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "multiClean": "rm -rf .nyc_output || echo 1",
    "multiCover": "nyc --no-clean --silent --temp-directory=./.nyc_output mocha 'test/unit/**/*.test.js'",
    "multiReport": "nyc  --temp-directory ./.nyc_output/ -r text -r lcov report",
    "test-integration": "mocha 'test/integration/**/*.test.js'",
    "test-server": "mocha 'test/unit/server/**/*.test.js'",
    "test-client": "mocha 'test/unit/client/**/*.test.js'",
    "test-hapi-plugin": "mocha 'test/unit/hapi-plugin/**/*.test.js'",
    "test-express-middleware": "mocha 'test/unit/express-middleware/**/*.test.js'",
    "postinstall": "npm run install-submodules",
    "install-submodules": "npm run install-server &&  npm run install-client && npm run install-hapi-plugin && npm run install-express-middleware",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-hapi-plugin": "cd hapi-plugin && npm install",
    "install-express-middleware": "cd express-middleware && npm install",
    "version": "npm run version-server &&  npm run version-client && npm run version-hapi-plugin && npm run version-express-middleware",
    "version-server": "cd server && npm version $npm_package_version",
    "version-client": "cd client && npm version $npm_package_version",
    "version-hapi-plugin": "cd hapi-plugin && npm version $npm_package_version",
    "version-express-middleware": "cd express-middleware && npm version $npm_package_version",
    "publish": "npm run publish-server &&  npm run publish-client && npm run publish-hapi-plugin && npm run publish-express-middleware",
    "publish-server": "cd server && npm publish",
    "publish-client": "cd client && npm publish",
    "publish-hapi-plugin": "cd hapi-plugin && npm publish",
    "publish-express-middleware": "cd express-middleware && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yonjah/ralphi.git"
  },
  "keywords": [
    "rate limiting",
    "bruteforce protection",
    "bruteforce",
    "password",
    "security",
    "rate limit",
    "throttling",
    "throttle",
    "rate",
    "limit"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "boom": "^7.2.0",
    "eslint": "^4.19.1",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "express": "^4.16.3",
    "hapi": "^17.3.1",
    "lolex": "^2.3.2",
    "mocha": "^5.0.5",
    "nock": "^9.2.3",
    "nyc": "^11.6.0",
    "should": "^13.2.1",
    "should-sinon": "0.0.6",
    "sinon": "^4.5.0",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "conventional-changelog-cli": "^1.3.21"
  }
}
